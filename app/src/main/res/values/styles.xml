<resources>

    <style name="Widget.MorennTheme.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.MorennTheme.TextInputLayout</item>
        <item name="shapeAppearance">@style/ShapeAppearance.MorennTheme.SmallComponent</item>
        <item name="hintTextColor">@color/charcoal</item>
    </style>

    <style name="ShapeAppearance.MorennTheme.SmallComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="ThemeOverlay.MorennTheme.TextInputLayout" parent="">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnSurface">@color/charcoal</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.MorennTheme.Subtitle</item>
        <item name="textAppearanceCaption">@style/TextAppearance.MorennTheme.Caption</item>
        <item name="editTextStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
    </style>

    <style name="ThemeOverlay.MorennTheme.TextInputLayout.OutlinedBox.ExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnSurface">@color/charcoal</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.MorennTheme.Subtitle</item>
        <item name="textAppearanceCaption">@style/TextAppearance.MorennTheme.Caption</item>
        <item name="editTextStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
    </style>

    <style name="Widget.MorennTheme.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="elevation">0dp</item>
        <item name="hoveredFocusedTranslationZ">0dp</item>
        <item name="pressedTranslationZ">0dp</item>
        <item name="borderWidth">0dp</item>
    </style>

    <style name="AppTextAppearance.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="elevation">0dp</item>
        <item name="hoveredFocusedTranslationZ">0dp</item>
        <item name="pressedTranslationZ">0dp</item>
        <item name="borderWidth">0dp</item>
    </style>

</resources>